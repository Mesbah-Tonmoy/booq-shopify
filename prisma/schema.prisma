// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/booq"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Shop {
  id                 Int                @id @default(autoincrement())
  domain             String             @unique
  accessToken        String
  email              String?
  plan               String             @default("free")
  shopifyPlan        String?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  locations          Location[]
  staffs             Staff[]
  staffGroups        StaffGroup[]
  serviceCategories  ServiceCategory[]
  services           Service[]
  settings           Settings?
}

model Location {
  id            Int     @id @default(autoincrement())
  name          String
  address       Json?
  country       String
  timezone      String  @default("Asia/Dhaka")
  status        String  @default("enabled")
  email         String?
  phone         String?
  website       String?
  maxCapacity   Int?    @default(10)
  workingHours  Json?
  blockoutDates Json?

  details      String?
  instructions String?

  createdAt DateTime @default(now())

  shopId Int
  shop   Shop    @relation(fields: [shopId], references: [id], onDelete: Cascade)
  staffs Staff[]
}

model Staff {
  id            Int     @id @default(autoincrement())
  name          String
  email         String?
  phone         String
  bio           String?
  photoUrl      String?
  timezone      String?
  status        String  @default("active")
  menuOrderBy   Int     @default(0)
  maxCapacity   Int
  blockoutDates Json?

  createdAt DateTime @default(now())

  shopId       Int
  shop         Shop        @relation(fields: [shopId], references: [id], onDelete: Cascade)
  locationId   Int?
  location     Location?   @relation(fields: [locationId], references: [id])
  staffGroupId Int?
  staffGroup   StaffGroup? @relation(fields: [staffGroupId], references: [id])
}

model StaffGroup {
  id   Int    @id @default(autoincrement())
  name String
  slug String

  shopId Int
  shop   Shop    @relation(fields: [shopId], references: [id], onDelete: Cascade)
  staffs Staff[]

  @@unique([shopId, slug])
}

model ServiceCategory {
  id   Int    @id @default(autoincrement())
  name String
  slug String

  shopId Int
  shop   Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, slug])
}

model Service {
  id                Int      @id @default(autoincrement())

  // Product/Slot Configuration
  name              String
  category          String?
  shopifyProductId  String?
  shopifyVariantIds Json?    // Array of selected variant IDs
  timezone          String   @default("Eastern time (ET)")
  serviceType       String   @default("regular") // regular, full-day, multi-day
  bundleBooking     Json?    // {enabled: boolean, minSlots: number, maxSlots: number}
  capacity          Int?     // Max bookings per slot
  
  // Multi-day settings
  minDays           Int?     @default(1)
  maxDays           Int?     @default(1)
  multiDayBooking   String?  @default("flexible") // flexible, consecutive
  allowedDays       Json?    // Array of allowed days for multi-day booking
  
  // Location & Staff Assignment
  locationType      String?
  selectedLocations Json?    // Array of location IDs
  hideLocationSelection Boolean? @default(false)
  selectedStaff     Json?    // Array of staff IDs
  hideStaffSelection Boolean? @default(false)
  
  // Others
  minimumAdvancedNotice     Int?     @default(0)
  minimumAdvancedNoticeUnit String?  @default("Hours") // Minutes, Hours, Days
  serviceVisibilityDays     Int?     @default(60)
  maxProductQuantities      Int?     @default(5)
  notificationEmail         String?
  cancelBooking             Json?    // {allowed: boolean, cutoffTime: string, cutoffUnit: string}
  allowReschedule           Boolean? @default(false)
  paymentPreferences        Json?    // {type: string, fullPayment: {...}, bookNowPayLater: {...}}
  customerFields            Json?    // Array of custom fields [{id, name, label, type, required, visible}]
  
  // Status
  status            String   @default("active") // active, inactive, draft
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  shopId            Int
  shop              Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  slots             Slots[]
}

model Slots {
  id                Int      @id @default(autoincrement())
  serviceId         Int
  service           Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  
  slotConfiguration Json?
}

model Settings {
  id                           Int      @id @default(autoincrement())
  weekStartsOn                 String   @default("Sunday")
  timezone                     String   @default("Asia/Dhaka")
  dateFormat                   String   @default("Default (Eg: Sun, 31 Dec 2023)")
  timeFormat                   String   @default("12-hour format (Eg: 2 PM)")

  shopSetting                  Json?

  cancellationPolicy           String   @default("Strict-48 hours notice")
  slotReservationTime          String   @default("5 min")
  bookingRedirection           String   @default("Cart page")
  paymentStatus                String   @default("Paid")
  universalBookingLink         Boolean  @default(true)
  
  // widget settings
  widgetSettings Json?

  // notification settings
  customerNotificationSettings Json?
  ownerNotificationSettings    Json?
  emailTemplates               Json?
  emailConfig                  Json?
  
  createdAt                    DateTime @default(now())
  updatedAt                    DateTime @updatedAt

  shopId Int  @unique
  shop   Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)
}
